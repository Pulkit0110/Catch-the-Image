<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <% if(errorMessage) { %>
        <div class="errorMessage"><%= errorMessage %></div>
    <% } %>
    <form class="form-control" action="/login" method="POST">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" value="<%= oldInput.username %>" required>
        
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>

        <button class="loginsignup" type="submit">Login</button>
        &nbsp;&nbsp;
        <a class="loginsignup" href="/reset">Reset Password</a>
    </form>
    
<%- include('../includes/end.ejs') %>